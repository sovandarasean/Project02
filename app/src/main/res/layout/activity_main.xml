<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FBEDD9"
    android:padding="15dp">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_500"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="CALCULATE YOUR"
        android:textAlignment="center"
        android:textColor="#FB8C00"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="#10EEF6"
        android:padding="10dp"
        android:text="AGE"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FB8C00"
        android:textAlignment="center"
        android:text="IN MINUTES"
        android:textStyle="bold"
        android:layout_below="@id/txt2"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnSelectDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt3"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:padding="12dp"
        android:text="SELECT DATE"
        android:textColor="#8E8E8E"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#BF6B01"
        android:textAlignment="center"
        android:text="01/01/1990"
        android:textStyle="bold"
        android:layout_below="@id/btnSelectDate"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtDate"
        android:layout_centerHorizontal="true"
        android:text="Selected Date"
        android:textAlignment="center"
        android:textColor="#83A15B00"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtMinute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="1222345"
        android:textAlignment="center"
        android:textColor="#BF6B01"
        android:textSize="24sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txt7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#83A15B00"
        android:textAlignment="center"
        android:text="In minute till date"
        android:textStyle="bold"
        android:layout_below="@id/txtMinute"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>